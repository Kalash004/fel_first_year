<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.PublicChatController">
    <VBox prefHeight="400.0" prefWidth="146.0">
        <Label text="Active users: " />
        <ListView fx:id="userList" prefHeight="392.0" prefWidth="146.0"  />
    </VBox>
   <VBox layoutX="146.0" prefHeight="400.0" prefWidth="454.0">
         <Label text="PUBLIC CHAT" />
         <ListView fx:id="messageHistory" prefHeight="290.0" prefWidth="454.0" />
         <ToolBar prefHeight="40.0" prefWidth="200.0">
             <TextArea fx:id="message" prefHeight="82.0" prefWidth="302.0" />
             <Button fx:id="sendButton" mnemonicParsing="false" text="Send" onAction="#onSendButtonClick" />
         </ToolBar>
   </VBox>
</AnchorPane>
